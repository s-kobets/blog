mixin list(id, items)
	each val, index in items
		div(id=index)
			div(class='id')= val.id
			div(class='title')= val.title
			div !{val.body}
			if val.url
				div(class='url')= val.url
			else
				div(class='hide')
			div(class='userId')= val.userId
			div(class='createdAt')= val.createdAt

mixin pagination(items)
	= items.total
	= items.current
	.pagination
		- for(var i = 1; i <= items.total; i += 1)
			- if (i == items.current)
				span.page.current=i
			- else
				a.page(href='?page='+i)=i 		