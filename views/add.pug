extends ./default

block content
	form(id="js-add-post" class="add-post" method="POST" action="/api/pages")
		label(name="title")
			| Заглавие
			input(id="title" name="title" type="text")
		label(name="body")
			| Описание
			textarea(id="body" name="body")
		button(type="submit" class="js-submit-addpost")
			| Опубликовать

	form(enctype='multipart/form-data')
		input(type="file" name="image" class="js-input-file") 
		button(type="submit" class="js-submit-addFile")
			| Upload Image